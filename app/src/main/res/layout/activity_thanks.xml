<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10253a"
    android:orientation="vertical"
    tools:context=".thanks">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="440dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgtestcovid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:text="Berdasarkan hasil test,status kamu saat ini ODP(Orang Dalam Pengawasan).Segera periksaan dirimu ke pelayanan kesehatan terdekat ya.Tetep di rumah dan isolasi diri kamu secara mandiri."
                android:textColor="#FFF" />

        </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button

        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="Lanjutkan"

        android:textColor="#FFF"
        android:background="#10253a"
        android:layout_width="match_parent"
        android:id="@+id/buttonlanjutkan"
        android:layout_height="match_parent" />
</LinearLayout>
</LinearLayout>